{{!-- <link rel="stylesheet" href="../css/style.css"> --}}
{{!-- css styling --}}
<style>
    h1 {
        display: flex;
        justify-content: center;
    }

    #new-movie {
        display: flex;
        justify-content: flex-end;
        color: red;
    }

    #all-movies {
        border: solid ;
    }
</style>

{{!-- Page header --}}
<div>
    <h1>Your Movie Collection</h1>
</div>

{{!-- Add a new movie --}}
<div id="new-movie">
    <button>
         <a href="/movies/new"> Add New Movie</a>
    </button>
</div>


{{!-- Total number of movies in a collection --}}
{{#each movie as |movie index|}}
        <span>All {{totalNumberMovies index}} Titles</span>
{{/each}}

{{!-- List of all movies --}}
{{#each movie as |movie index|}}
    <div>All {{movieIndex index}} Titles</div>
{{/each}}

    {{#each movie}}
    <div id="all-movies">
        Movie Name: {{this.name}}
    <p>Rank: {{rank}}</p> 
        Genre: {{genre.[0]}}
        

        <div>
            <a href="/movies/{{this.id}}">More details</a>
        </div>


    </div>
    {{/each}}

    
