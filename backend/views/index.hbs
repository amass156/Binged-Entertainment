<div>
    <h1>Your Movie Collection</h1>
</div>

{{!-- Add a new movie --}}
<div id="new-movie">
    <button>
         <a href="/movies/new"> Add New Movie</a>
    </button>
</div>


{{!-- Total number of movies in a collection --}}
<span> {{movie.length}} Movies</span>



{{!-- List of all movies --}}
{{#each movie as |movie index|}}
    <div id="all-movies">
        Movie Name: {{this.name}}
    <p>Rank: {{rank}}</p> 
        Genre: {{genre.[0]}}
        
        <div>
            <a href="/movies/{{this.id}}">More details</a>
        </div>

        {{!-- movie number by index --}}
        <div>Movie #{{movieIndex index}}</div>
   
    </div>
{{/each}}


    
