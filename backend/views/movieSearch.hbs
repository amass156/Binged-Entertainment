<div class="container">
<h2> Search for your movie</h2>



    {{#if message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
             <strong>Please enter a Movie name</strong> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form action="/movies/search/new/"  method="POST">
            <div class="form-group">
                <label for="name" class="form-label">Name:</label>
                <input type="text" name="name" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="genre" class="form-label">Genre:</label>
                <input type="text" name="genre" class="form-control"/>
            </div>

        <span style="display: flex; justify-content:space-between; padding: 25px 20px" >
                <button type="submit" class="btn btn-danger" >
                        <a href="/movies">Cancel</a>
                </button>
                <button type="submit" class="btn btn-secondary">Submit</button>
            </span>
    </form>

    <footer id="footer">
            {{> footer}}
    </footer>

</div>