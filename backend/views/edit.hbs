<style>
    .edit-form {
        display: flex;
        flex-direction: column;
    }
    #edit-title {
        display: flex;
        justify-content: center;
    }

</style>
<div id="edit-title">
    <h1 >{{this.name}}</h1>
</div>

{{> messages}}

<h4>Edit {{this.name}}</h4>
<form action="/movies/{{this.id}}/?_method=put" method="POST">
    <div class="edit-form">
        <label for="name">Name:</label>
        <input type="text" name="name" placeholder="{{this.name}}"/>
    
        <label for="genre">Genre:</label>
        <input type="text"  name="genre" placeholder="{{this.genre}}">

        <label for="date">Date Watched:</label>
        <input type="date" name="date" placeholder="{{this.date}}">

        <label for="rank"> Rank:</label>
        <input type="number" name="rank" placeholder="{{this.rank}}">

        <label for="comments"> Comments</label>
        <input type="text" name="comment" placeholder="{{this.comment}}">

        <input type="submit">
  </div>
</form>
<div>
    <a href="/movies">Cancel</a>
</div>
{{this.date}}