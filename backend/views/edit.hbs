<body class="edit-body">
    
</body>
<div class="container">


    <div id="edit-title">
        <h1>{{this.name}}</h1>
    </div>

    {{!-- {{> messages}} --}}

    <h4>Edit {{this.name}}</h4>
    <form action="/movies/{{this.id}}/?_method=put" method="POST">
        <div class="form-group">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="name" value="{{this.name}}" class="form-control"/>
        </div>
        
        <div class="form-group">
            <label for="genre">Genre:</label>
            <input type="text"  name="genre" value="{{this.genre}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="date">Date Watched:</label>
            <input type="text" name="date" value="{{this.date}}" class="form-control">
            {{!-- onlick that changes type: text to type: date --}}
        </div>

        <div class="form-group">
            <label for="rank"> Rating:</label>
            <input max="10" type="number" name="rank" value="{{this.rank}}" class="form-control">
        </div>

        <div class="form-group">
            <label for="comments"> Comments:</label>
            <input type="text" name="comment" value="{{this.comment}}" class="form-control">
        </div>




        <span style="display: flex; justify-content:space-evenly" >
            <button type="submit" class="btn btn-secondary">Submit</button>
            <button type="submit" class="btn btn-danger" >
                    <a href="/movies/{{this.id}}">Cancel</a>
            </button>
        </span>

           
    </form>

</div>
