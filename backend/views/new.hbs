<div class="container">
    
    <h1>Add a new Movie</h1>

    <form action="/movies" method="POST">
        <div class="form-group">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="name" value="{{movie.name}}" class="form-control"  />
    </div>
        
        <div class="form-group">
            <label for="genre" class="form-label">Genre:</label>
            <input type="text"  name="genre" value="{{movie.genre}}" class="form-control" >
        </div>

        <div class="form-group">
            <label for="date" class="form-label">Date Watched:</label>
            <input type="date" name="date" class="form-control">
        </div>


        <div class="form-group">
            <label for="rank" class="form-label"> Rank:</label>
            <input type="number" name="rank" max="10" placeholder="Must be between 1-10" class="form-control">

        </div>

        <div class="form-group">
            <label for="comments" class="form-label"> Comments</label>
            <input type="text" name="comment" placeholder="Best Movie Ever!" class="form-control">
        </div>

        <div class="form-group">
            <label for="img" class="form-label"> Image</label>
            <input type="text" name="img" placeholder="Insert img URL" class="form-control">
        </div>

            <span style="display: flex; justify-content:flex-end; padding: 15px 10px"  >
                <button type="submit" class="btn btn-secondary">Submit</button>
            </span>

    {{!-- <a href="/" class="btn btn-secondary">Cancel</a> --}}
    </form>

</div>
<footer id="footer">
    {{> footer}}
</footer>
